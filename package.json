{
  "name": "extension",
  "version": "1.0.0",
  "displayName": "CSMiddler Helper",
  "description": "Extension for CSMiddler.com users",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csmiddler/extension.git"
  },
  "author": "@ludvigbartholdsson (Ludvig Bartholdsson)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/csmiddler/extension/issues"
  },
  "homepage": "https://github.com/csmiddler/extension#readme",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.10.0",
    "plasmo": "0.85.2",
    "svelte": "^4.2.15",
    "svelte-preprocess": "^5.1.4",
    "webextension-polyfill": "^0.11.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/webextension-polyfill": "^0.10.7",
    "prettier": "3.2.4",
    "prettier-plugin-svelte": "^3.2.3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "scripting",
      "cookies",
      "activeTab",
      "webRequest"
    ],
    "host_permissions": [
      "*://*.csmiddler.com/*",
      "*://steamcommunity.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "csmiddler@example.com"
      }
    }
  }
}
